<body>
    <header>
        <h1>Todo List App</h1>
    </header>
    <main>
        <input type="text" id="new-todo" placeholder="Add new todo">
        <button id="add-todo">Add</button>
        <ul id="todo-list"></ul>
    </main>
<script>
//JavaScript from here
let todoList = [];

document.getElementById('add-todo').addEventListener('click', addTodo);

function addTodo() {
    let newTodoInput = document.getElementById('new-todo');
    let newTodoText = newTodoInput.value.trim();

    if (newTodoText!== '') {
        todoList.push({ text: newTodoText, completed: false });
        newTodoInput.value = '';
        renderTodoList();
    }
}

function renderTodoList() {
    let todoListHTML = '';
    todoList.forEach((todo, index) => {
        todoListHTML += `
            <li>
                <input type="checkbox" ${todo.completed? 'checked' : ''} data-index="${index}">
                <span ${todo.completed? 'class="completed"' : ''}>${todo.text}</span>
                <button class="delete-btn" data-index="${index}">X</button>
            </li>
        `;
    });
    document.getElementById('todo-list').innerHTML = todoListHTML;

    let checkboxes = document.querySelectorAll('input[type="checkbox"]');
    checkboxes.forEach((checkbox) => {
        checkbox.addEventListener('click', toggleCompleted);
    });

    let deleteBtns = document.querySelectorAll('.delete-btn');
    deleteBtns.forEach((btn) => {
        btn.addEventListener('click', deleteTodo);
    });
}

function toggleCompleted(event) {
    let index = event.target.getAttribute('data-index');
    todoList[index].completed =!todoList[index].completed;
    renderTodoList();
}

function deleteTodo(event) {
    let index = event.target.getAttribute('data-index');
    todoList.splice(index, 1);
    renderTodoList();
}
</script>
  
</body>
</html>
